<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="article" type="jp.ginyolith.kamen_rider_matome.data.Article" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/image_row_matome"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_row_matome"
                android:textSize="15sp"
                tools:text="@{article.title}"
                android:text="ジーニアス負けすぎって意見もあるけどそうでもなくない？【ビルド 45話】"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blog_name_row_matome"
                android:layout_alignParentBottom="true"
                android:textSize="10sp"
                tools:text="@{article.blog.enum.blogName}"
                android:text="仮面RIDER まとめ2号"
            />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/slash_row_matome"
                android:layout_toEndOf="@id/blog_name_row_matome"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text=" | "
            />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pub_datetime_row_matome"
                android:layout_toEndOf="@id/slash_row_matome"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                tools:text="@{article.pubDate.toString()}"
                android:text="2018/7/28 14:44"
            />
        </RelativeLayout>

    </LinearLayout>
</layout>